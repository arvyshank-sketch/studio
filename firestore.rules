rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated();
      
      // Allow users to manage their own journal entries
      match /journals/{journalId} {
        allow read, write, delete: if isAuthenticated() && isOwner(userId);
      }
      
      // Allow users to manage their own weight entries
      match /weightEntries/{entryId} {
        allow read, write, delete: if isAuthenticated() && isOwner(userId);
      }
    }
  }
}
